root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Dockerfile]
indent_size = 4

[*.{js,ts,json,html,css,tf}]
indent_size = 2

[*.go]
indent_size = 4
indent_style = tab

[go.{mod,work,work.sum,sum}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[*.md]
indent_size = 4
trim_trailing_whitespace = false
